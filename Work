    <script>
        function toggleAccordion(button) {
            const content = button.nextElementSibling;
            content.classList.toggle('show');
        }
        
        function vypocet() {
            const castka = parseFloat(document.getElementById('castka').value);
            const splatka = parseFloat(document.getElementById('splatka').value);
            const mesice = parseInt(document.getElementById('mesice').value);
            
            if (isNaN(castka) || isNaN(splatka) || isNaN(mesice)) {
                document.getElementById('vysledek').innerHTML = 'Pros√≠m zadejte v≈°echny √∫daje spr√°vnƒõ.';
                return;
            }
            
            const celkemZaplateno = splatka * mesice;
            const preplatek = celkemZaplateno - castka;
            
            document.getElementById('vysledek').innerHTML = `
                <p>Celkovƒõ zaplaceno: ${celkemZaplateno.toFixed(2)} Kƒç</p>
                <p>P≈ôeplatek (√∫roky a poplatky): ${preplatek.toFixed(2)} Kƒç</p>
                <p>Nic neplat√≠te p≈ôedem ‚Äì pouze p≈ôi √∫spƒõchu.</p>
            `;
        }
        
        function vypocetNarok() {
            const insolvence = document.getElementById('insolvence').value;
            const mzda = parseFloat(document.getElementById('mzda').value);
            const splatky = parseFloat(document.getElementById('splatky').value);
            const rpsn = parseFloat(document.getElementById('rpsn').value);
            const pujcenaCastka = parseFloat(document.getElementById('pujcena-castka').value);
            const zaplaceno = parseFloat(document.getElementById('zaplaceno').value);
            const zivotniMinimum = 4860;
            const minPreplatek = 20000;
            
            if (!insolvence || isNaN(mzda) || isNaN(splatky) || isNaN(rpsn) || isNaN(pujcenaCastka) || isNaN(zaplaceno)) {
                document.getElementById('narok-vysledek').innerHTML = 'Pros√≠m zadejte v≈°echny √∫daje spr√°vnƒõ.';
                return;
            }
            
            const preplatek = zaplaceno - pujcenaCastka;
            const zustatek = mzda - splatky;
            
            if (insolvence === 'ano') {
                document.getElementById('narok-vysledek').innerHTML = '<p style="color: red;">Nen√≠ mo≈æn√©: Nesm√≠te b√Ωt v insolvenci.</p>';
                return;
            }
            
            if (zustatek < zivotniMinimum) {
                document.getElementById('narok-vysledek').innerHTML = '<p style="color: red;">Nen√≠ mo≈æn√©: Z≈Østatek po spl√°tk√°ch (' + zustatek.toFixed(2) + ' Kƒç) je ni≈æ≈°√≠ ne≈æ ≈æivotn√≠ minimum (' + zivotniMinimum + ' Kƒç).</p>';
                return;
            }
            
            if (rpsn <= 50) {
                document.getElementById('narok-vysledek').innerHTML = '<p style="color: red;">Nen√≠ mo≈æn√©: RPSN mus√≠ b√Ωt vy≈°≈°√≠ ne≈æ 50 %.</p>';
                return;
            }
            
            if (preplatek <= minPreplatek) {
                document.getElementById('narok-vysledek').innerHTML = '<p style="color: red;">Nen√≠ mo≈æn√©: P≈ôeplatek mus√≠ b√Ωt vy≈°≈°√≠ ne≈æ 20 000 Kƒç.</p>';
                return;
            }
            
            document.getElementById('narok-vysledek').innerHTML = '<p style="color: green;">Mo≈æn√©: Spl≈àujete podm√≠nky pro vr√°cen√≠ √∫rok≈Ø.</p>';
            spustitAnimaci();
        }
        
        function spustitAnimaci() {
            const animace = document.getElementById('uspech-animace');
            animace.style.display = 'block';
            
            // Simulace konfet
            for (let i = 0; i < 50; i++) {
                const konfeta = document.createElement('div');
                konfeta.classList.add('konfety');
                konfeta.style.left = Math.random() * 100 + '%';
                konfeta.style.background = ['yellow', 'red', 'green', 'blue'][Math.floor(Math.random() * 4)];
                konfeta.style.animationDelay = Math.random() * 2 + 's';
                document.body.appendChild(konfeta);
                setTimeout(() => konfeta.remove(), 3000);
            }
        }
        
        function zobrazOdmena() {
            const info = document.getElementById('odmena-info');
            info.style.display = info.style.display === 'block' ? 'none' : 'block';
        }
        
        function otevritModal() {
            document.getElementById('kontakt-modal').style.display = 'flex';
        }
        
        function zavritModal() {
            document.getElementById('kontakt-modal').style.display = 'none';
        }
        
        function otevritNarokModal() {
            document.getElementById('narok-modal').style.display = 'flex';
        }
        
        function zavritNarokModal() {
            document.getElementById('narok-modal').style.display = 'none';
        }
        
        // Zav≈ô√≠t mod√°ly kliknut√≠m mimo obsah
        window.onclick = function(event) {
            const kontaktModal = document.getElementById('kontakt-modal');
            const narokModal = document.getElementById('narok-modal');
            if (event.target === kontaktModal) {
                kontaktModal.style.display = 'none';
            }
            if (event.target === narokModal) {
                narokModal.style.display = 'none';
            }
        }
    </script>
